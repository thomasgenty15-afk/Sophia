  "objectives": [
    {
      "kind": "tools_deactivate_action_v2_realistic",
      "spec": {
        "action_title": "Lecture",
        "reason": "ça me met la pression et je procrastine dessus depuis des semaines",
        "difficulty_profile": "hard",
        "expected_turns": 12
      }
    }
  ],
  "variants": [
    {
      "id": "easy_12t",
      "tags": ["difficulty.easy", "v2"],
      "objectives": [
        {
          "kind": "tools_deactivate_action_v2_realistic",

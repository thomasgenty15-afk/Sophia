  "persona": {
    "label": "Utilisateur bloqué sur une habitude",
    "age_range": "25-35",
    "style": "oral, honnête, un peu découragé",
    "background": "Je n'arrive pas à méditer le matin en ce moment. Je manque de motivation et je repousse à chaque fois. La lecture ça va mieux, j'ai fait 3 fois cette semaine."
  },
  "assertions": {
    "must_include_agent": ["investigator"],
    "include_vitals_in_bilan": true,
    "assistant_must_not_match": ["\\*\\*"]

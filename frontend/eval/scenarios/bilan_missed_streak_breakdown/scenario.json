    "seed_plan": true,
    "preseed_vitals": [
      {
        "label": "Énergie",
        "unit": "/10",
        "tracking_type": "counter"
      }
    ],
    "preseed_actions": [
      {
        "title": "Méditation 10 min",
        "type": "habit",
        "tracking_type": "boolean",
        "target_reps": 5,
        "current_reps": 0,
